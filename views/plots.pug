extends layout

block headerRight
  a(href="/plots/new")#addPlot.circled ï¼‹

block main
  ul#plots
    each plot in plots
      li
        a(href=`/plots/${plot.getId()}`).plot-link
          h3= plot.getName()
          table.plot.overview
            tbody
              each row in plot.getPatches()
                tr
                  each patch in row
                    td(class="patch overview"
                      style=`--plant-rgb: ${patch.getPlant() ? patch.getPlantColor() : "var(--unplanted-patch-rgb)"}`)= patch.getPlantEmoji()