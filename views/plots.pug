extends layout

block headerRight
  a(href="/plots/new")#addPlot.circled ï¼‹

block main
  div#plots
    each plot in plots
      a(href=`/plots/${plot.getId()}`).plot-link
        h3= plot.getName()
        div.plot-container.overview
          each row in plot.getPatches()
            div.row
              each patch in row
                div(class="patch overview"
                  style=`--plant-rgb: ${patch.getPlantColor()}; --plot-columns: ${plot.getCols()}; --plot-rows: ${plot.getRows()}`)= patch.getPlantEmoji()